@model DuckTaleTest.ViewModels.StudentSubjectViewModel

@{
    ViewData["Title"] = "Add Student Subject";
}

<h1>Add Student Subject</h1>

<hr />
<div class="breadcrumbs">
    <div class="col-sm-12">
        <div class="page-header">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Student Subject</a></li>
                    <li class="breadcrumb-item active">Add Student Subject</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.SubjectName" class="control-label"></label>
                <input asp-for="@Model.SubjectName" class="form-control" />
                <span asp-validation-for="@Model.SubjectName" class="text-danger"></span>
            </div>
            <div class="col-md-12 form-group">
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to List</a>
                <button type="submit" value="Create" class="btn btn-primary">Add Subject List</button>
            </div>

            @*<div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>*@
        </form>
    </div>
</div>
<scripts>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/swiper@4.4.1/dist/js/swiper.min.js">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>


</scripts>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
